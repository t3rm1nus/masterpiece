{
  "appId": "com.masterpiece.app",
  "appName": "Masterpiece",
  "webDir": "dist/client",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#000000",
      "androidSplashResourceName": "splash",
      "androidScaleType": "FIT_XY",
      "showSpinner": false,
      "splashFullScreen": true,
      "splashImmersive": true,
      "useDialog": false
    }
  },
  "android": {
    "webContentsDebuggingEnabled": false
  },
  "copy": {
    "exclude": [
      "**/imagenes/comics/**",
      "**/imagenes/movies/**",
      "**/imagenes/musica/**",
      "**/imagenes/peliculas/**",
      "**/imagenes/podcasts/**",
      "**/imagenes/documentales/**",
      "**/imagenes/videojuegos/**",
      "**/imagenes/series/**",
      "**/imagenes/libros/**",
      "**/imagenes/juegos_de_mesa/**"
    ]
  }
}

