{
  "appId": "com.masterpiece.app",
  "appName": "Masterpiece",
  "webDir": "dist",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#000000",
      "androidSplashResourceName": "splash",
      "androidScaleType": "FIT_XY",
      "showSpinner": false,
      "splashFullScreen": true,
      "splashImmersive": true,
      "useDialog": false
    }
  }
}

